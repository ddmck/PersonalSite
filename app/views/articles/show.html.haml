= provide :title, @article.title
.row
  .span6.offset2
    %h2= @article.title

    .center= image_tag(@article.article_image_url(:article), style: "width:100%; border-radius:4px")
    %br

    %p= raw(@article.body)
    %p= @article.tags


    - if admin_signed_in?
      = link_to 'Edit', edit_article_path(@article), class: "btn btn-warning"
      = link_to 'Delete', article_path(@article), method: :delete, class: "btn btn-danger", confirm: "Are you sure?"
    = link_to 'Back', article_path, class: "btn btn-inverse" 


    = render partial: 'comments/form'
    %h3= "Comments (#{@article.comments.size})"
    %hr
    = render partial: 'articles/comment', collection: @article.comments

