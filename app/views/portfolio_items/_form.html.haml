.row
  .span5.offset2   
    = form_for @portfolio_item, html: { multipart: true } do |f|
      - if @portfolio_item.errors.any?
        %ul.alert.alert-error.alert-block.unstyled
          %h4.text-left= "Form contains #{pluralize(@portfolio_item.errors.count, "error")}"
          %br
          - @portfolio_item.errors.full_messages.each do |error|
            %li.text-left= error

      %p= f.text_field :title, placeholder: "Title", style: "width:100%"
      
      %p= f.text_area :description, placeholder: "Description", style: "width:100%"
      
      %p= f.text_field :link, placeholder: "Link to site", style: "width:100%"
      
      %p= f.text_field :github, placeholder: "Github link", style: "width:100%"
      
      %p= f.file_field :portfolio_image

      %p= f.text_field :remote_portfolio_image_url, placeholder: "Image URL"

      = f.submit "Create new item", class: "btn btn-inverse" 
